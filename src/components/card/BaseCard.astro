---

export interface Props {
    title: string;
    description: string;
    technologies?: string[];
    class?: string;
}

const { title, description, technologies = [], class: customClass = '' } = Astro.props;
---

<div class={`card ${customClass}`}>
  <div class="card__left_column">
    <slot name="left" class="title"/>
  </div>
  <div class="card__right_column">
    <p class="title">{title}</p>
    <p class="description">{description}</p>
    <div class="tech_container">
      {technologies.map(tech => <span>{tech}</span>)}
    </div>
  </div>
</div>