---
export interface Props {
    period: string;
    title: string;
    description: string;
    technologies?: string[];
}

const { period, title, description, technologies = [] } = Astro.props;
---

<div class="card education_card">
  <div class="card__left_column">
    <span class="title">{period}</span>
  </div>
  <div class="card__right_column">
    <p class="title">{title}</p>
    <p class="description">{description}</p>
    <div class="tech_container">
      {technologies.map(tech => <span>{tech}</span>)}
    </div>
  </div>
</div>